{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "dist_agent_lang",
  "scopeName": "source.dist_agent_lang",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#attributes"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#types"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.dist_agent_lang",
          "match": "//.*$"
        },
        {
          "name": "comment.block.dist_agent_lang",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "meta.attribute.dist_agent_lang",
          "match": "@(trust|secure|limit|txn|chain|compile_target|interface|ai|persistent|cached|versioned|deprecated|audit)\\b",
          "captures": {
            "1": {
              "name": "entity.name.tag.attribute.dist_agent_lang"
            }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.dist_agent_lang",
          "match": "\\b(if|else|while|for|return|break|continue|try|catch|finally|throw)\\b"
        },
        {
          "name": "keyword.declaration.dist_agent_lang",
          "match": "\\b(let|fn|service|agent|spawn|msg|event|async|await)\\b"
        },
        {
          "name": "keyword.other.dist_agent_lang",
          "match": "\\b(with|as|import|export|private|public|mut|const|static|extern|crate|super|self|Self)\\b"
        },
        {
          "name": "storage.type.dist_agent_lang",
          "match": "\\b(int|string|bool|any|null|Result|Option|Some|None|Ok|Err|List|Map|Set|Generic|Box)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.dist_agent_lang",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.dist_agent_lang",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.dist_agent_lang",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.dist_agent_lang",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.decimal.dist_agent_lang",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        {
          "name": "constant.numeric.hex.dist_agent_lang",
          "match": "\\b0x[a-fA-F0-9]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.dist_agent_lang",
          "match": "="
        },
        {
          "name": "keyword.operator.comparison.dist_agent_lang",
          "match": "(==|!=|<|>|<=|>=)"
        },
        {
          "name": "keyword.operator.logical.dist_agent_lang",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.dist_agent_lang",
          "match": "(\\+|\\-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.other.dist_agent_lang",
          "match": "(\\.|::|->|=>|\\?)"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.dist_agent_lang",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        },
        {
          "name": "support.function.builtin.dist_agent_lang",
          "match": "\\b(print|log|add|multiply|subtract|divide)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "entity.name.type.dist_agent_lang",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
