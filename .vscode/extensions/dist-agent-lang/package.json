{
  "name": "dist-agent-lang",
  "displayName": "DAL Support",
  "description": "Syntax highlighting and language support for DAL (dist_agent_lang): keywords, types, LSP (diagnostics, hover, completion, go to definition, signature help).",
  "version": "0.1.0",
  "publisher": "dal-support",
  "repository": {
    "type": "git",
    "url": "https://github.com/okjason-source/dist_agent_lang.git"
  },
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters"
  ],
  "keywords": [
    "dal",
    "dist-agent-lang",
    "ai-agent",
    "orchestration",
    "smart-contracts",
    "language-server"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "dist_agent_lang",
        "extensions": [".dal"],
        "aliases": ["DAL", "dal", "dist_agent_lang"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "dist_agent_lang",
        "scopeName": "source.dist_agent_lang",
        "path": "./syntaxes/dist_agent_lang.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "DAL",
      "properties": {
        "dal.languageServerPath": {
          "type": "string",
          "default": "dal",
          "description": "Path to the DAL (dist_agent_lang) executable. Use 'dal' if it is on your PATH. Build the CLI with --features lsp for LSP support."
        },
        "dal.languageServerArgs": {
          "type": "array",
          "default": ["lsp"],
          "description": "Arguments passed to the DAL executable to start the language server."
        }
      }
    },
    "tasks": [
      {
        "label": "Run DAL file",
        "type": "shell",
        "command": "${config:dal.languageServerPath}",
        "args": ["run", "${file}"],
        "group": "build",
        "presentation": { "reveal": "always", "panel": "new" }
      },
      {
        "label": "Check DAL file",
        "type": "shell",
        "command": "${config:dal.languageServerPath}",
        "args": ["check", "${file}"],
        "group": "build",
        "presentation": { "reveal": "always", "panel": "shared" }
      }
    ]
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
